{% extends "base.html.twig" %}

{% block body %}
<div class="container">

    <h1 class="text-center my-3">Connexion</h1>

    <div class="col-12 d-flex justify-content-center">

        <form action="{{ path('security_login') }}" method="post" class="w-50">
            <div class="form-group mb-4">
                <input required name="_username" type="text" class="form-control" placeholder="Adresse email...">
            </div>
            <div class="form-group mb-4">
                <input required name="_password" type="password" class="form-control" placeholder="Mot de passe ...">
            </div>
            <div class="form-group d-grid gap-2">
                <button type="submit" class="btn btn-success">Connexion</button>
            </div>

        </form>
    </div>
</div>
{% endblock %}